[Unit]
Description=Nova WebSocket Bridge for OpenClaw
After=network.target openclaw-gateway.service

[Service]
Type=simple
EnvironmentFile=/home/ec2-user/nova-bridge/.env
ExecStart=/usr/bin/python3 /home/ec2-user/nova-bridge/nova_bridge.py
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
